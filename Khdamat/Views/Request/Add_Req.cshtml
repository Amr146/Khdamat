@model Khdamat.Models.Req_Svc
@{
    ViewData["Title"] = "Add_Req";
}
@using (Html.BeginForm("Add_Req", "Request", FormMethod.Post)) {

    <div class="row">
        <div class="col-md-4 register">
            <form asp-action="Add_Req">
                <h2 class="makeflex graycolor logofont">خدمات</h2>
                <h2 class="makeflex">انشاء خدمة جديدة</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Request.Title" class="form-control" placeholder="اسم الخدمة" />
                    <span asp-validation-for="Request.Title" class="text-danger makeflex"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Request.Min_Age" type = "number" value="" class="form-control" placeholder="اقل سن"/>
                    <span asp-validation-for="Request.Min_Age" class="text-danger makeflex"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Request.Max_Age" type = "number" value="" class="form-control" placeholder="اكبر سن"/>
                    <span asp-validation-for="Request.Max_Age" class="text-danger makeflex"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Request.Min_Price" type = "number" value="" class="form-control" placeholder="اقل سعر"/>
                    <span asp-validation-for="Request.Min_Price" class="text-danger makeflex"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Request.City" class="form-control" placeholder="المدينة" />
                    <span asp-validation-for="Request.City" class="text-danger makeflex"></span>
                </div>
                <div class="form-group">
                    @*<input asp-for="Gender" class="form-control" placeholder="النوع"/>
                    <span asp-validation-for="Gender" class="text-danger makeflex"></span>*@ 
                     <label style="margin-right: 10px;">النوع</label>
                    <label>ذكر</label>
                    <input asp-for="Request.Gender"  type="radio" value="m">
                    <label>انثي</label>
                    <input asp-for="Request.Gender"  type="radio" value="f">
                    <span asp-validation-for="Request.Gender" class="text-danger makeflex"></span>
                </div>
                <label>نوع الخدمة</label>
                <select asp-for="Request.Service_ID" >
                  @if (Model.Services != null)
                  {
                    @foreach (Service item in Model.Services)
                    {
                        <option  value=@item.Service_ID>@item.Name</option>
                        @*<li><a class="nav-link text-dark myNav" asp-for="Request.Service_ID" >@item.Name</a></li>*@
                        
                    }
                  }
                </select>
                <div class="form-group">
                    <label>تاريخ تحقق الخدمة</label>
                    <input asp-for="Request.Date_Req" type = "date" class="form-control"/>
                    <span asp-validation-for="Request.Date_Req" class="text-danger makeflex"></span>
                </div>

                <div class="form-group">
                    @*<input asp-for="Description_Req" class="form-control" placeholder="تفاصيل الخدمة"/>
                    <span asp-validation-for="Description_Req" class="text-danger makeflex"></span>*@
                    @Html.TextAreaFor(x=>x.Request.Description_Req, new {@class ="form-control",@id="textAnswer", @name="textAnswer" ,@rows = "10" , @placeholder = "تفاصيل الخدمة"})
                </div>
                <div>
                    <input type="submit" value="إضافة خدمة جديدة" />
                </div>
                @if (ViewBag.Message != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            alert("@ViewBag.Message");
                        };
                    </script>
                }
            </form>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}