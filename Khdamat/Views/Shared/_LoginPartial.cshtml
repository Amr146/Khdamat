@using Microsoft.AspNetCore.Http;

<ul class="navbar-nav">
@if (Context.Session.GetString("Email") != null)
{
    <li class="nav-item">
        <a asp-area="" asp-controller="" asp-action="">
            <input type="checkbox" id="switch"
                   class="checkbox" />
            <label for="switch" class="toggle makeflex" style="justify-content:space-between; padding:5px; ">
                <p style="color: white; font-size: 13px; font-weight: bold;">
                    عامل
                </p>
                <p style="color: white; font-size: 13px; font-weight: bold;">زبون</p>

            </label>
        </a>
    </li>
    <li class="nav-item">
        <a  class="nav-link text-dark"  title="Manage">مرحبا 
            @((Context.Session.GetString("FirstName") == null)
               ? Context.Session.GetString("Email")
               : Context.Session.GetString("FirstName"))</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="" asp-controller = "Accounts" asp-action="Logout">
            <button  type="submit" class="nav-link btn btn-link text-dark">تسجيل الخروج</button>
        </form>
    </li>
}
else
{
    <li class="nav-item ">
        <a class="nav-link text-dark myNav" asp-area="" asp-controller = "Accounts" asp-action="Register">انشاء حساب</a>
    </li>
    <li class="nav-item ">
        <a class="nav-link text-dark myNav" asp-area="" asp-controller = "Accounts" asp-action="Login">تسجيل دخول</a>
    </li>
}
</ul>
